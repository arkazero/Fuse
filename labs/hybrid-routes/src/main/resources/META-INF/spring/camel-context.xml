<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="activemq">
        <property name="connectionFactory">
            <bean class="org.apache.activemq.ActiveMQConnectionFactory">
                <property name="brokerURL" value="vm://localhost?broker.persistent=false&amp;broker.useJmx=false&amp;broker.enableStatistics=false"/>
            </bean>
        </property>
    </bean>
    <bean class="com.redhat.training.jb421.FTPRouteBuilder" id="ftpRoute"/>
    <camelContext id="directContext" xmlns="http://camel.apache.org/schema/spring">
        <propertyPlaceholder id="ftp" location="ftp.properties"/>
        <routeBuilder ref="ftpRoute"/>
        <route id="journalRoute">
            <from id="fromDirectHeader" uri="direct:header"/>
            <convertBodyTo type="java.lang.String"/>
            <setHeader headerName="vendorName" id="vendorNameHeader">
                <xpath>/order/orderItems/orderItem/orderItemPublisherName/text()</xpath>
            </setHeader>
            <to id="toJournal" uri="file:orders?fileExist=Append&amp;fileName=journal-${header.vendorName}.txt"/>
        </route>
    </camelContext>
</beans>
